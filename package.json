{
	"name": "@toolsntuts/svelte-components",
	"version": "0.0.3",
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.0.0-next.39",
		"clsx": "^2.1.1",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"mode-watcher": "^0.4.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"publint": "^0.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^0.3.28",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.4"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./SpinLoader.svelte": {
			"types": "./dist/components/widgets/SpinLoader.svelte.d.ts",
			"svelte": "./dist/components/widgets/SpinLoader.svelte"
		},
		"./MediaPreview.svelte": {
			"types": "./dist/components/widgets/MediaPreview.svelte.d.ts",
			"svelte": "./dist/components/widgets/MediaPreview.svelte"
		},
		"./CloudinaryApiFileUpload.svelte": {
			"types": "./dist/components/widgets/CloudinaryApiFileUpload.svelte.d.ts",
			"svelte": "./dist/components/widgets/CloudinaryApiFileUpload.svelte"
		},
		"./Footer.svelte": {
			"types": "./dist/components/sections/Footer.svelte.d.ts",
			"svelte": "./dist/components/sections/Footer.svelte"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"publish": "npm publish --access public",
		"unpublish": "npm unpublish @toolsntuts/svelte-components -f",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"dependencies": {
		"@toolsntuts/utils": "0.0.5",
		"cloudinary": "^2.5.1",
		"lucide-svelte": "^0.454.0"
	}
}
